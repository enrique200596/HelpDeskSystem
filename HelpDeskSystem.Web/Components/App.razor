@using Microsoft.AspNetCore.Components.Web

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="HelpDeskSystem.Web.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />

    @* --- REFERENCIAS PARA EL EDITOR DE TEXTO (Quill) --- *@
    <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link href="//cdn.quilljs.com/1.3.6/quill.bubble.css" rel="stylesheet">

    @* --- CORRECCIÓN VITAL: prerender: false --- *@
    <HeadOutlet @rendermode="new InteractiveServerRenderMode(prerender: false)" />
</head>
<body>
    @* --- CORRECCIÓN VITAL: prerender: false --- *@
    <Routes @rendermode="new InteractiveServerRenderMode(prerender: false)" />

    <script src="_framework/blazor.web.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @* --- SCRIPTS DE LIBRERÍAS (Solución al error QuillFunctions) --- *@
    <script src="_content/Blazored.TextEditor/quill.min.js"></script>
    <script src="_content/Blazored.TextEditor/Blazored-BlazorQuill.js"></script>

    @* --- SCRIPTS PERSONALIZADOS --- *@
    <script src="js/notificaciones.js"></script>
    <script>
        // Solución para la exportación de reportes:
        // Esta función procesa la cadena Base64 generada en C# y dispara la descarga en el navegador.
        window.descargarArchivo = (nombre, base64) => {
            const link = document.createElement('a');
            link.download = nombre;
            link.href = "data:application/octet-stream;base64," + base64;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
    </script>
</body>
</html>