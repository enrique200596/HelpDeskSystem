@page "/login"
@attribute [AllowAnonymous]
@* Ya no necesitamos inyectar servicios de lógica aquí, solo navegación si acaso *@
@inject NavigationManager Navegacion

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="bi bi-shield-lock"></i> Iniciar Sesión</h3>
                </div>
                <div class="card-body">
                    @* Mostrar errores que vienen desde el Controlador *@
                    @if (!string.IsNullOrEmpty(MensajeError))
                    {
                        <div class="alert alert-danger text-center">
                            <i class="bi bi-exclamation-circle-fill"></i> @MensajeError
                        </div>
                    }

                    @* FORMULARIO ESTÁNDAR QUE HACE POST AL CONTROLADOR *@
                    @* No usamos @bind, usamos 'name' para que el controlador reciba los datos *@
                    <form action="/account/login" method="post">
                        <input type="hidden" name="returnUrl" value="@ReturnUrl" />

                        <div class="mb-3">
                            <label class="form-label">Correo Electrónico</label>
                            <input type="text" name="email" class="form-control" placeholder="ejemplo@helpdesk.com" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <input type="password" name="password" class="form-control" placeholder="****" required />
                        </div>

                        @* Botón simple tipo submit, SIN @onclick *@
                        <button type="submit" class="btn btn-primary w-100 py-2">
                            Ingresar al Sistema
                        </button>
                    </form>
                </div>
                <div class="card-footer text-muted small bg-light">
                    <p class="mb-1 fw-bold">Credenciales de prueba:</p>
                    <ul class="mb-0">
                        <li>admin@helpdesk.com (Pass: admin)</li>
                        <li>juan@helpdesk.com (Pass: 1234)</li>
                        <li>carla@cliente.com (Pass: 1234)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    // Recibimos parámetros por URL por si el controlador nos devuelve un error
    // o para saber a dónde volver después de loguearnos.

    [SupplyParameterFromQuery(Name = "returnUrl")]
    public string ReturnUrl { get; set; } = "";

    [SupplyParameterFromQuery(Name = "error")]
    public string MensajeError { get; set; } = "";
}