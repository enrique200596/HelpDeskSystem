@page "/"
@attribute [Authorize]
@using HelpDeskSystem.Domain.Entities
@using HelpDeskSystem.Web.Services
@using HelpDeskSystem.Data
@using Microsoft.EntityFrameworkCore
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@inject ITicketService ServicioTickets
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>HelpDesk - Tablero</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3">Tablero de Tickets</h1>
        <p class="text-muted mb-0">Visualiza y gestiona tus solicitudes de soporte.</p>
    </div>
    @if (rolActual == "Usuario")
    {
        <a href="nuevo-ticket" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Crear Nuevo Ticket
        </a>
    }
</div>

@if (tickets == null)
{
    <div class="text-center p-5">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-3">Cargando tickets...</p>
    </div>
}
else if (tickets.Count == 0)
{
    <div class="text-center p-5 bg-light rounded-3">
        <i class="bi bi-inbox display-4 text-secondary"></i>
        <h4 class="mt-3">No hay tickets para mostrar</h4>
        <p class="text-muted">
            @if (rolActual == "Usuario")
            {
                <span>Parece que no has creado ningún ticket. ¡Crea uno para empezar!</span>
            }
            else
            {
                <span>No tienes tickets asignados o no hay tickets en el sistema que coincidan con tu rol.</span>
            }
        </p>
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var ticket in tickets)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0 ticket-card">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title fw-bold text-primary-emphasis mb-0">
                                <a href="/ticket/@ticket.Id" class="text-decoration-none">@ticket.Titulo</a>
                            </h5>
                            <span class="badge bg-light text-dark border">#@ticket.Id</span>
                        </div>

                        <div class="d-flex gap-2 mb-3">
                            @switch (ticket.Estado)
                            {
                                case HelpDeskSystem.Domain.Enums.EstadoTicket.Abierto:
                                    <span class="badge bg-secondary-subtle text-secondary-emphasis">Abierto</span>
                                    break;
                                case HelpDeskSystem.Domain.Enums.EstadoTicket.Asignado:
                                    <span class="badge bg-primary-subtle text-primary-emphasis">Asignado</span>
                                    break;
                                case HelpDeskSystem.Domain.Enums.EstadoTicket.Resuelto:
                                    <span class="badge bg-success-subtle text-success-emphasis">Resuelto</span>
                                    break;
                            }
                            @if (ticket.EsUrgente)
                            {
                                <span class="badge bg-danger-subtle text-danger-emphasis">🔥 Urgente</span>
                            }
                        </div>

                        <div class="small text-muted mb-3">
                            <i class="bi bi-person"></i> Creado por: <strong>@ticket.Usuario?.Nombre</strong>
                            <br />
                            <i class="bi bi-calendar-event"></i> Fecha: <strong>@ticket.FechaCreacion.ToString("d MMM yyyy")</strong>
                        </div>

                        <div class="mt-auto pt-3 border-top">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <small class="text-muted">Asignado a:</small>
                                    @if (ticket.Asesor != null)
                                    {
                                        <div class="fw-bold text-success"><i class="bi bi-headset"></i> @ticket.Asesor.Nombre</div>
                                    }
                                    else
                                    {
                                        <div class="text-muted fst-italic">-- Sin Asignar --</div>
                                    }
                                </div>
                                <a href="/ticket/@ticket.Id" class="btn btn-sm btn-outline-primary">
                                    Ver Detalles <i class="bi bi-arrow-right-short"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .ticket-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    .ticket-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

@code {
    private List<Ticket>? tickets;
    private Guid usuarioId;
    private string rolActual = "";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            var idClaim = user.FindFirst(ClaimTypes.Sid) ?? user.FindFirst(ClaimTypes.NameIdentifier);
            if (idClaim != null && Guid.TryParse(idClaim.Value, out var parsedId))
            {
                usuarioId = parsedId;
            }

            rolActual = user.FindFirst(ClaimTypes.Role)?.Value ?? "";
            tickets = await ServicioTickets.ObtenerTicketsFiltradosAsync(usuarioId, rolActual);
        }
    }
}