@page "/"
@attribute [Authorize]
@using HelpDeskSystem.Domain.Entities
@using HelpDeskSystem.Domain.Enums
@using HelpDeskSystem.Web.Services
@using HelpDeskSystem.Data
@using Microsoft.EntityFrameworkCore
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@inject ITicketService ServicioTickets
@inject AuthenticationStateProvider AuthStateProvider
@inject TicketStateContainer StateContainer
@implements IDisposable

<PageTitle>Tablero | HelpDesk UTEPSA</PageTitle>

<div class="container-fluid px-4 pb-5">

    @* --- ENCABEZADO Y ACCIONES --- *@
    <div class="d-flex justify-content-between align-items-end my-4 animate-enter">
        <div>
            <h6 class="text-uppercase text-muted fw-bold ls-1 mb-1">Tablero Principal</h6>
            <h2 class="fw-bold text-dark mb-0">
                Hola, @nombreUsuario
                @if (tickets != null)
                {
                    <span class="badge bg-light text-dark border ms-2 align-middle fs-6" style="font-weight: 500;">
                        @TicketsFiltrados.Count() tickets
                    </span>
                }
            </h2>
        </div>

        @if (esRolUsuario)
        {
            <a href="nuevo-ticket" class="btn btn-utepsa shadow-sm d-flex align-items-center gap-2">
                <i class="bi bi-plus-lg"></i>
                <span>Nuevo Ticket</span>
            </a>
        }
    </div>

    @* --- BARRA DE FILTROS --- *@
    <div class="card-pro mb-4 animate-enter" style="animation-delay: 0.1s;">
        <div class="card-body p-3">
            <div class="row g-3 align-items-center">
                @* Buscador *@
                <div class="col-md-5 col-lg-4">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0 ps-3 text-muted">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control form-control-pro border-start-0 ps-2"
                               placeholder="Buscar por título o #ID..."
                               @bind="filtroTexto"
                               @bind:event="oninput"
                               @onkeyup="ResetearPagina" />
                    </div>
                </div>

                @* Filtros de Estado (Pills) *@
                <div class="col-md-7 col-lg-8">
                    <div class="d-flex gap-2 flex-wrap justify-content-md-end">
                        <button class="btn btn-sm rounded-pill px-3 fw-bold @(filtroEstado == "Todos" ? "btn-dark" : "btn-light border")"
                                @onclick='() => SetFiltro("Todos")'>
                            Todos
                        </button>

                        <button class="btn btn-sm rounded-pill px-3 fw-bold @(filtroEstado == "Abierto" ? "btn-dark" : "btn-light border")"
                                @onclick='() => SetFiltro("Abierto")'>
                            Abiertos
                        </button>

                        <button class="btn btn-sm rounded-pill px-3 fw-bold @(filtroEstado == "Asignado" ? "btn-dark" : "btn-light border")"
                                @onclick='() => SetFiltro("Asignado")'>
                            En Proceso
                        </button>

                        <button class="btn btn-sm rounded-pill px-3 fw-bold @(filtroEstado == "Resuelto" ? "btn-dark" : "btn-light border")"
                                @onclick='() => SetFiltro("Resuelto")'>
                            Resueltos
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* --- ESTADO DE CARGA (SKELETONS) --- *@
    @if (tickets == null)
    {
        <div class="row g-4">
            @for (int i = 0; i < 8; i++)
            {
                <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                    <div class="card-pro h-100 border-0" aria-hidden="true">
                        <div class="card-body">
                            <h5 class="card-title placeholder-glow mb-3">
                                <span class="placeholder col-6 rounded"></span>
                            </h5>
                            <p class="card-text placeholder-glow mb-4">
                                <span class="placeholder col-7 rounded"></span>
                                <span class="placeholder col-4 rounded"></span>
                                <span class="placeholder col-4 rounded"></span>
                                <span class="placeholder col-6 rounded"></span>
                            </p>
                            <div class="placeholder-glow d-flex justify-content-between">
                                <span class="placeholder col-3 rounded-pill btn btn-sm disabled"></span>
                                <span class="placeholder col-3 rounded-circle" style="width:32px; height:32px;"></span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (!TicketsPaginados.Any())
    {
        @* --- EMPTY STATE --- *@
        <div class="text-center py-5 animate-enter">
            <div class="mb-3 opacity-25">
                <i class="bi bi-inbox-fill" style="font-size: 5rem;"></i>
            </div>
            <h4 class="text-muted fw-bold">No se encontraron tickets</h4>
            <p class="text-muted">Intenta ajustar los filtros de búsqueda.</p>
            @if (filtroEstado != "Todos" || !string.IsNullOrEmpty(filtroTexto))
            {
                <button class="btn btn-outline-dark mt-2" @onclick="LimpiarFiltros">Limpiar Filtros</button>
            }
        </div>
    }
    else
    {
        @* --- LISTADO REAL --- *@
        <div class="row g-4 mb-4">
            @foreach (var ticket in TicketsPaginados)
            {
                <div class="col-12 col-md-6 col-lg-4 col-xl-3 animate-enter">
                    <div class="card-pro h-100 position-relative d-flex flex-column card-hover-effect">

                        @* Indicador Lateral de Color *@
                        <div class="position-absolute top-0 start-0 bottom-0 rounded-start-3"
                             style="width: 5px; background-color: @ObtenerColorBorde(ticket);"></div>

                        <div class="card-body ps-4 d-flex flex-column h-100">

                            @* Header Tarjeta *@
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted small fw-bold text-uppercase">#@ticket.Id</span>
                                <small class="text-muted" style="font-size: 0.75rem;">
                                    <i class="bi bi-clock me-1"></i>@ObtenerTiempoRelativo(ticket.FechaCreacion)
                                </small>
                            </div>

                            @* Título *@
                            <h6 class="fw-bold mb-2 text-truncate-2 flex-grow-0" style="min-height: 2.6em;">
                                <a href="/ticket/@ticket.Id" class="text-dark text-decoration-none stretched-link title-hover">
                                    @if (ticket.EsUrgente && ticket.Estado != EstadoTicket.Resuelto)
                                    {
                                        <i class="bi bi-exclamation-triangle-fill text-danger me-1" title="Prioridad Alta"></i>
                                    }
                                    @ticket.Titulo
                                </a>
                            </h6>

                            @* Categoría *@
                            <div class="mb-4">
                                <span class="badge bg-light text-secondary border fw-normal">
                                    <i class="bi bi-tag me-1"></i>@(ticket.Categoria?.Nombre ?? "General")
                                </span>
                            </div>

                            @* Footer (Push to bottom) *@
                            <div class="mt-auto pt-3 border-top border-light d-flex align-items-center justify-content-between">

                                @* Pill de Estado *@
                                <span class="badge-pill @ObtenerClaseBadge(ticket.Estado)">
                                    <i class="bi @ObtenerIconoEstado(ticket.Estado)"></i>
                                    @(ticket.Estado == EstadoTicket.Asignado ? "En Proceso" : ticket.Estado.ToString())
                                </span>

                                @* Avatar Asesor *@
                                @if (ticket.Asesor != null)
                                {
                                    <div class="d-flex align-items-center" title="Asesor: @ticket.Asesor.Nombre">
                                        <div class="rounded-circle bg-dark text-white d-flex align-items-center justify-content-center shadow-sm fw-bold"
                                             style="width: 30px; height: 30px; font-size: 0.75rem;">
                                            @ticket.Asesor.Nombre.Substring(0, 1).ToUpper()
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @* --- PAGINACIÓN --- *@
        @if (TotalPaginas > 1)
        {
            <div class="d-flex justify-content-center align-items-center gap-2 mt-2 pb-5">
                <button class="btn btn-white border shadow-sm" @onclick="PaginaAnterior" disabled="@(paginaActual == 1)">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <span class="text-muted small fw-bold">Página @paginaActual de @TotalPaginas</span>
                <button class="btn btn-white border shadow-sm" @onclick="PaginaSiguiente" disabled="@(paginaActual == TotalPaginas)">
                    <i class="bi bi-chevron-right"></i>
                </button>
            </div>
        }
    }
</div>

<style>
    .ls-1 {
        letter-spacing: 0.5px;
    }

    .text-truncate-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .title-hover:hover {
        color: var(--utepsa-red) !important;
    }

    .card-hover-effect {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .card-hover-effect:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-hover);
        }
</style>

@code {
    private List<Ticket>? tickets;
    private Guid usuarioId;
    private string rolActual = "";
    private string nombreUsuario = "";
    private bool esRolUsuario = false;

    // Filtros
    private string filtroTexto = "";
    private string filtroEstado = "Todos";

    // Paginación
    private int paginaActual = 1;
    private const int itemsPorPagina = 8; // 8 tarjetas se ven bien (4x2)

    protected override async Task OnInitializedAsync()
    {
        StateContainer.OnChange += RecargarTicketsEnVivo;
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            nombreUsuario = user.Identity.Name ?? "Usuario";
            var idClaim = user.FindFirst(ClaimTypes.Sid) ?? user.FindFirst(ClaimTypes.NameIdentifier);

            if (idClaim != null && Guid.TryParse(idClaim.Value, out var parsedId))
            {
                usuarioId = parsedId;
            }

            rolActual = user.FindFirst(ClaimTypes.Role)?.Value ?? "Sin Rol";
            esRolUsuario = user.IsInRole("Usuario");

            // Simulamos un pequeño delay artificial para que veas el Skeleton Loading (puedes quitarlo luego)
            await Task.Delay(500);
            await CargarLista();
        }
    }

    private async Task CargarLista()
    {
        tickets = await ServicioTickets.ObtenerTicketsFiltradosAsync(usuarioId, rolActual);
    }

    private async void RecargarTicketsEnVivo(int? id, string? t, string? r, Guid? o, Guid? a)
    {
        await InvokeAsync(async () =>
        {
            await CargarLista();
            StateHasChanged();
        });
    }

    // --- LÓGICA DE FILTROS Y PAGINACIÓN ---

    private void SetFiltro(string estado)
    {
        filtroEstado = estado;
        paginaActual = 1; // Resetear a pag 1 al filtrar
    }

    private void ResetearPagina() => paginaActual = 1;

    private void LimpiarFiltros()
    {
        filtroTexto = "";
        filtroEstado = "Todos";
        paginaActual = 1;
    }

    private IEnumerable<Ticket> TicketsFiltrados
    {
        get
        {
            if (tickets == null) return Enumerable.Empty<Ticket>();
            var resultado = tickets.AsEnumerable();

            // 1. Filtro Texto
            if (!string.IsNullOrWhiteSpace(filtroTexto))
            {
                resultado = resultado.Where(t =>
                    t.Titulo.Contains(filtroTexto, StringComparison.OrdinalIgnoreCase) ||
                    t.Id.ToString().Contains(filtroTexto)
                );
            }

            // 2. Filtro Estado
            if (filtroEstado != "Todos" && Enum.TryParse<EstadoTicket>(filtroEstado, out var estadoEnum))
            {
                resultado = resultado.Where(t => t.Estado == estadoEnum);
            }

            // 3. Ordenamiento (Urgentes activos arriba)
            return resultado
                .OrderByDescending(t => t.EsUrgente && t.Estado != EstadoTicket.Resuelto)
                .ThenByDescending(t => t.FechaCreacion);
        }
    }

    private IEnumerable<Ticket> TicketsPaginados => TicketsFiltrados
                                                    .Skip((paginaActual - 1) * itemsPorPagina)
                                                    .Take(itemsPorPagina);

    private int TotalPaginas => (int)Math.Ceiling((double)TicketsFiltrados.Count() / itemsPorPagina);

    private void PaginaSiguiente() { if (paginaActual < TotalPaginas) paginaActual++; }
    private void PaginaAnterior() { if (paginaActual > 1) paginaActual--; }

    // --- HELPERS VISUALES ---

    private string ObtenerColorBorde(Ticket t)
    {
        if (t.Estado == EstadoTicket.Resuelto) return "#16a34a"; // Verde Pro
        if (t.EsUrgente) return "#dc2626"; // Rojo Pro
        if (t.Estado == EstadoTicket.Asignado) return "#ca8a04"; // Dorado/Amarillo
        return "#64748b"; // Gris
    }

    private string ObtenerClaseBadge(EstadoTicket estado) => estado switch
    {
        EstadoTicket.Abierto => "status-open",
        EstadoTicket.Asignado => "status-process",
        EstadoTicket.Resuelto => "status-solved",
        _ => "bg-light text-dark"
    };

    private string ObtenerIconoEstado(EstadoTicket estado) => estado switch
    {
        EstadoTicket.Abierto => "bi-inbox",
        EstadoTicket.Asignado => "bi-gear-wide-connected",
        EstadoTicket.Resuelto => "bi-check-circle-fill",
        _ => "bi-circle"
    };

    private string ObtenerTiempoRelativo(DateTime fecha)
    {
        var span = DateTime.Now - fecha;
        if (span.TotalMinutes < 60) return $"Hace {span.Minutes} min";
        if (span.TotalHours < 24) return $"Hace {span.Hours} h";
        return fecha.ToString("dd MMM");
    }

    // Asegúrate de que al inicio del archivo diga: @implements IDisposable

    public void Dispose()
    {
        // El signo MENOS (-=) es obligatorio. Si tienes +=, cámbialo.
        StateContainer.OnChange -= RecargarTicketsEnVivo;
    }
}