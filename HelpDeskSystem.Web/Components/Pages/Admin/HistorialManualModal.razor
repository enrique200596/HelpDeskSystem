@using HelpDeskSystem.Domain.Entities
@using HelpDeskSystem.Domain.Enums
@using HelpDeskSystem.Web.Services
@inject IManualService ManualService

@if (Mostrar)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.6); backdrop-filter: blur(4px);" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-scrollable modal-dialog-centered" role="document">
            <div class="modal-content border-0 shadow-pro animate-enter">
                <div class="modal-header bg-subtle border-bottom py-3">
                    <h5 class="modal-title fw-bold text-primary d-flex align-items-center">
                        <i class="bi bi-clock-history me-2 text-utepsa-red"></i>
                        Bitácora de Auditoría
                    </h5>
                    <button type="button" class="btn-close" @onclick="Cerrar" aria-label="Cerrar"></button>
                </div>

                <div class="modal-body p-4">
                    <div class="mb-4">
                        <h6 class="text-uppercase text-secondary fw-bold mb-1" style="font-size: 0.7rem; letter-spacing: 1px;">Documento Consultado:</h6>
                        <h5 class="fw-bold text-dark mb-0">@TituloManual</h5>
                    </div>

                    @if (cargando)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-utepsa-red mb-3" role="status"></div>
                            <p class="text-secondary small fw-bold ls-1">RECUPERANDO TRAZABILIDAD...</p>
                        </div>
                    }
                    else if (logs == null || !logs.Any())
                    {
                        <div class="text-center py-5 border rounded-3 bg-light">
                            <i class="bi bi-folder-x fs-1 text-secondary opacity-25"></i>
                            <p class="mt-2 text-secondary mb-0">No existen registros históricos para este manual.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle border-top">
                                <thead class="bg-light">
                                    <tr class="text-secondary small text-uppercase fw-bold ls-1">
                                        <th style="width: 25%">Fecha y Hora</th>
                                        <th style="width: 25%">Responsable</th>
                                        <th style="width: 20%">Acción</th>
                                        <th style="width: 30%">Observaciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var log in logs)
                                    {
                                        <tr>
                                            <td class="small fw-medium">
                                                <i class="bi bi-calendar-event me-1 text-secondary"></i>
                                                @log.FechaEvento.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center gap-2">
                                                    @if (!string.IsNullOrEmpty(log.Usuario?.FotoPerfilUrl))
                                                    {
                                                        <img src="@log.Usuario.FotoPerfilUrl" class="rounded-circle border" width="28" height="28" style="object-fit: cover;" />
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-secondary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center text-secondary" style="width: 28px; height: 28px;">
                                                            <i class="bi bi-person-fill" style="font-size: 0.8rem;"></i>
                                                        </div>
                                                    }
                                                    <span class="small fw-bold text-primary">@(log.Usuario?.Nombre ?? "Sistema")</span>
                                                </div>
                                            </td>
                                            <td>
                                                @switch (log.Accion)
                                                {
                                                    case TipoAccionManual.Creacion:
                                                        <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-2">Creación</span>
                                                        break;
                                                    case TipoAccionManual.Edicion:
                                                        <span class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill px-2">Edición</span>
                                                        break;
                                                    case TipoAccionManual.Desactivacion:
                                                        <span class="badge bg-warning-subtle text-warning border border-warning-subtle rounded-pill px-2">Ocultado</span>
                                                        break;
                                                    case TipoAccionManual.Reactivacion:
                                                        <span class="badge bg-info-subtle text-info border border-info-subtle rounded-pill px-2">Reactivado</span>
                                                        break;
                                                    case TipoAccionManual.EliminacionLogica:
                                                        <span class="badge bg-danger-subtle text-danger border border-danger-subtle rounded-pill px-2">Papelera</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill px-2">@log.Accion</span>
                                                        break;
                                                }
                                            </td>
                                            <td class="small text-secondary italic">
                                                @(string.IsNullOrWhiteSpace(log.Detalle) ? "Sin observaciones adicionales" : log.Detalle)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

                <div class="modal-footer bg-light border-top">
                    <button type="button" class="btn btn-dark fw-bold px-4 rounded-3" @onclick="Cerrar">CERRAR VENTANA</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool Mostrar = false;
    private List<ManualLog> logs = new();
    private bool cargando = false;
    private string TituloManual = "";

    public async Task Abrir(int manualId, string titulo)
    {
        Mostrar = true;
        TituloManual = titulo;
        cargando = true;
        StateHasChanged();

        try
        {
            logs = await ManualService.ObtenerHistorialAsync(manualId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar auditoría: {ex.Message}");
            logs = new();
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private void Cerrar()
    {
        Mostrar = false;
        logs.Clear();
    }
}