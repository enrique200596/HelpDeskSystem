@page "/nuevo-ticket"
@attribute [Authorize(Roles = "Usuario")]
@using HelpDeskSystem.Domain.Entities
@using HelpDeskSystem.Web.Services
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using System.ComponentModel.DataAnnotations
@using System.Globalization

@inject ITicketService ServicioTickets
@inject NavigationManager Navegacion
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Nuevo Ticket | HelpDesk UTEPSA</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7 animate-enter">

            @* --- CABECERA DE LA PÁGINA --- *@
            <div class="text-center mb-4">
                <div class="bg-utepsa-red rounded-circle d-inline-flex align-items-center justify-content-center shadow-sm mb-3" style="width: 60px; height: 60px;">
                    <i class="bi bi- megaphone-fill text-white fs-3"></i>
                </div>
                <h2 class="fw-bold text-primary" style="letter-spacing: -1px;">Crear Solicitud de Soporte</h2>
                <p class="text-secondary small">Describe tu problema detalladamente para que nuestros asesores puedan ayudarte rápidamente.</p>
            </div>

            @* --- TARJETA DEL FORMULARIO --- *@
            <div class="card-pro shadow-pro border-0">
                <div class="card-pro-body p-4 p-md-5">

                    <EditForm Model="nuevoTicketModel" OnValidSubmit="Guardar" FormName="nuevoTicketForm">
                        <DataAnnotationsValidator />

                        <div class="row g-4">
                            @* Título *@
                            <div class="col-12">
                                <label for="titulo" class="form-label fw-bold text-primary small text-uppercase ls-1">Título del Incidente</label>
                                <InputText id="titulo" @bind-Value="nuevoTicketModel.Titulo"
                                           class="form-control-pro w-100"
                                           placeholder="Ej: Error al intentar acceder al módulo de notas" />
                                <ValidationMessage For="@(() => nuevoTicketModel.Titulo)" class="text-danger small mt-1" />
                            </div>

                            @* Categoría *@
                            <div class="col-12">
                                <label for="categoria" class="form-label fw-bold text-primary small text-uppercase ls-1">Categoría o Sistema</label>
                                <div class="position-relative">
                                    <InputSelect id="categoria" @bind-Value="nuevoTicketModel.CategoriaId" class="form-control-pro w-100 appearance-none">
                                        <option value="0">-- Selecciona el área afectada --</option>
                                        @foreach (var cat in listaCategorias)
                                        {
                                            <option value="@cat.Id">@cat.Nombre</option>
                                        }
                                    </InputSelect>
                                    <i class="bi bi-chevron-down position-absolute end-0 top-50 translate-middle-y me-3 text-secondary pointer-events-none"></i>
                                </div>
                                <ValidationMessage For="@(() => nuevoTicketModel.CategoriaId)" class="text-danger small mt-1" />
                            </div>

                            @* Descripción *@
                            <div class="col-12">
                                <label for="descripcion" class="form-label fw-bold text-primary small text-uppercase ls-1">Descripción Detallada</label>
                                <InputTextArea id="descripcion" @bind-Value="nuevoTicketModel.Descripcion"
                                               class="form-control-pro w-100" rows="5"
                                               placeholder="Describe qué estabas haciendo, qué error apareció y cualquier código que visualices..." />
                                <ValidationMessage For="@(() => nuevoTicketModel.Descripcion)" class="text-danger small mt-1" />
                            </div>

                            @* Urgencia (Selector visual mejorado) *@
                            <div class="col-12">
                                <div class="p-3 rounded-3 border @(nuevoTicketModel.EsUrgente ? "bg-danger bg-opacity-10 border-danger" : "bg-subtle border-light") transition-all">
                                    <div class="form-check d-flex align-items-center gap-2">
                                        <InputCheckbox @bind-Value="nuevoTicketModel.EsUrgente" class="form-check-input mt-0" id="checkUrgente" style="width: 20px; height: 20px;" />
                                        <label class="form-check-label fw-bold @(nuevoTicketModel.EsUrgente ? "text-danger" : "text-primary")" for="checkUrgente">
                                            <i class="bi bi-lightning-charge-fill me-1"></i> Marcar como Solicitud Urgente
                                        </label>
                                    </div>
                                    <p class="form-text mb-0 mt-2 small ms-4">Selecciona esta opción solo si el problema impide totalmente la continuación de tus actividades críticas.</p>
                                </div>
                            </div>

                            @* Botones de Acción *@
                            <div class="col-12 mt-5">
                                <div class="d-flex flex-column-reverse flex-md-row justify-content-end gap-3">
                                    <a href="/" class="btn btn-light px-4 fw-bold text-secondary">Cancelar</a>
                                    <button type="submit" class="btn btn-utepsa px-5 shadow-red-glow" disabled="@estaGuardando">
                                        @if (estaGuardando)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                            <span>Procesando...</span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-send-check-fill me-2"></i>
                                            <span>Enviar Solicitud</span>
                                        }
                                    </button>
                                </div>
                            </div>
                        </div>

                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .ls-1 {
        letter-spacing: 0.5px;
    }

    .appearance-none {
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
    }

    .pointer-events-none {
        pointer-events: none;
    }
</style>

@code {
    private NuevoTicketModel nuevoTicketModel = new();
    private Guid usuarioActualId = Guid.Empty;
    private List<Categoria> listaCategorias = new();
    private bool estaGuardando = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var idClaim = user.FindFirst(ClaimTypes.Sid) ?? user.FindFirst(ClaimTypes.NameIdentifier);
            if (idClaim != null) usuarioActualId = Guid.Parse(idClaim.Value);
        }

        listaCategorias = await ServicioTickets.ObtenerCategoriasAsync();
    }

    private async Task Guardar()
    {
        if (usuarioActualId == Guid.Empty || estaGuardando) return;
        estaGuardando = true;

        try
        {
            var nuevoTicket = new Ticket
            {
                Titulo = nuevoTicketModel.Titulo,
                Descripcion = nuevoTicketModel.Descripcion,
                CategoriaId = nuevoTicketModel.CategoriaId,
                EsUrgente = nuevoTicketModel.EsUrgente,
                UsuarioId = usuarioActualId,
                FechaCreacion = DateTime.UtcNow,
                Estado = HelpDeskSystem.Domain.Enums.EstadoTicket.Abierto
            };

            await ServicioTickets.GuardarTicketAsync(nuevoTicket);
            Navegacion.NavigateTo("/");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al guardar ticket: {ex.Message}");
            estaGuardando = false;
            StateHasChanged();
        }
    }

    public class NuevoTicketModel
    {
        [Required(ErrorMessage = "El título es obligatorio.")]
        [StringLength(100, ErrorMessage = "El título no puede exceder los 100 caracteres.")]
        public string Titulo { get; set; } = "";

        [Required(ErrorMessage = "La descripción es obligatoria.")]
        [MinLength(10, ErrorMessage = "Por favor, brinda una descripción más detallada (mín. 10 caracteres).")]
        public string Descripcion { get; set; } = "";

        [Range(1, int.MaxValue, ErrorMessage = "Debes seleccionar una categoría válida.")]
        public int CategoriaId { get; set; }

        public bool EsUrgente { get; set; }
    }
}