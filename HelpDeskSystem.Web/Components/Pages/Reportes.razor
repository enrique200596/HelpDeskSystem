@page "/reportes"
@attribute [Authorize(Roles = "Administrador")]
@using HelpDeskSystem.Web.Services
@using HelpDeskSystem.Domain.Entities
@using HelpDeskSystem.Domain.Enums
@using System.Text
@inject IReportService ServicioReportes
@inject IUsuarioService ServicioUsuarios
@inject IJSRuntime JS

<PageTitle>Reportes de Gestión</PageTitle>

<style>
    @@media print {
        .no-print, .sidebar, .navbar {
            display: none !important;
        }

        .card {
            border: 1px solid #ddd !important;
            box-shadow: none !important;
            break-inside: avoid;
        }

        body {
            background-color: white !important;
        }

        .container {
            max-width: 100% !important;
            margin: 0 !important;
            padding: 0 !important;
        }

        .table {
            font-size: 0.8rem;
        }
        /* Letra más pequeña para que quepa al imprimir */
    }
</style>

<div class="container mt-4">

    @* --- CABECERA Y FILTROS --- *@
    <div class="card mb-4 no-print border-0 shadow-sm bg-light">
        <div class="card-body py-3">
            <div class="row g-2 align-items-end">
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-muted">Asesor</label>
                    <select class="form-select form-select-sm" @onchange="CambiarFiltro">
                        <option value="">Vista General (Todos)</option>
                        @foreach (var asesor in listaAsesores)
                        {
                            <option value="@asesor.Id">@asesor.Nombre</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-muted">Desde</label>
                    <input type="date" class="form-control form-control-sm" @bind="fechaDesde" />
                </div>
                <div class="col-md-3">
                    <label class="form-label small fw-bold text-muted">Hasta</label>
                    <input type="date" class="form-control form-control-sm" @bind="fechaHasta" />
                </div>
                <div class="col-md-3 d-flex gap-2">
                    <button class="btn btn-primary btn-sm w-100" @onclick="CargarDatos">
                        <i class="bi bi-funnel-fill"></i> Filtrar
                    </button>
                    <button class="btn btn-success btn-sm w-50" @onclick="ExportarExcel" title="Exportar Detalle">
                        <i class="bi bi-file-earmark-excel-fill"></i>
                    </button>
                    <button class="btn btn-secondary btn-sm w-50" @onclick="ImprimirPDF" title="Imprimir">
                        <i class="bi bi-printer-fill"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (cargando)
    {
        <div class="d-flex justify-content-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else
    {
        @* TÍTULO DINÁMICO *@
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h4 class="fw-bold text-dark mb-0">@tituloReporte</h4>
                <small class="text-muted">Periodo: @(fechaDesde?.ToShortDateString() ?? "Inicio") - @(fechaHasta?.ToShortDateString() ?? "Hoy")</small>
            </div>
            <span class="badge bg-primary fs-6">Total: @listaDetalleTickets.Count tickets</span>
        </div>

        <div class="row g-4 mb-4">
            @* KPI PRINCIPAL *@
            <div class="col-md-4">
                <div class="card shadow-sm border-start border-5 border-primary h-100">
                    <div class="card-body p-3">
                        <h6 class="text-uppercase text-muted fw-bold ls-1 mb-1" style="font-size:0.75rem;">Tiempo Promedio</h6>
                        <h2 class="fw-bold text-dark mb-0">@tiempoPromedio</h2>
                    </div>
                </div>
            </div>
            @* KPI SATISFACCIÓN (Nuevo) *@
            <div class="col-md-4">
                <div class="card shadow-sm border-start border-5 border-warning h-100">
                    <div class="card-body p-3">
                        <h6 class="text-uppercase text-muted fw-bold ls-1 mb-1" style="font-size:0.75rem;">Satisfacción Promedio</h6>
                        <h2 class="fw-bold text-dark mb-0">
                            @(listaDetalleTickets.Any(t => t.SatisfaccionUsuario != null)
                                                    ? listaDetalleTickets
                                                    .Where(t => t.SatisfaccionUsuario != null)
                                                    .Average(t => t.SatisfaccionUsuario!.Value) // <--- EL CAMBIO ESTÁ AQUÍ
                                                    .ToString("0.0")
                                                    : "-") / 5
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        @* --- TABLA DETALLADA DE ATENCIONES --- *@
        <div class="card shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold">Detalle de Atenciones</h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Fecha Cierre</th>
                            <th>Ticket</th>
                            <th>Categoría</th>
                            @if (filtroAsesorId == null)
                            {
                                <th>Asesor</th>
                            }
                            @* Si es general, mostramos columna Asesor *@
                            <th>Cliente</th>
                            <th>Calif.</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in listaDetalleTickets)
                        {
                            <tr>
                                <td>@t.FechaCierre?.ToString("g")</td>
                                <td>
                                    <div class="fw-bold">@t.Titulo</div>
                                    <small class="text-muted">#@t.Id</small>
                                </td>
                                <td><span class="badge bg-light text-dark border">@t.Categoria?.Nombre</span></td>
                                @if (filtroAsesorId == null)
                                {
                                    <td><span class="fw-bold text-primary">@t.Asesor?.Nombre</span></td>
                                }
                                <td>@t.Usuario?.Nombre</td>
                                <td>
                                    @if (t.SatisfaccionUsuario != null)
                                    {
                                        <span class="text-warning fw-bold">@t.SatisfaccionUsuario ★</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                            </tr>
                        }
                        @if (listaDetalleTickets.Count == 0)
                        {
                            <tr><td colspan="6" class="text-center py-4 text-muted">No se encontraron atenciones en este periodo.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private bool cargando = true;
    private string tiempoPromedio = "0.0 h";
    private string tituloReporte = "Reporte General de Atenciones";

    private Guid? filtroAsesorId = null;
    private DateTime? fechaDesde = DateTime.Today.AddDays(-30);
    private DateTime? fechaHasta = DateTime.Today;

    // Listas de datos
    private List<Ticket> listaDetalleTickets = new();
    private List<Usuario> listaAsesores = new();

    protected override async Task OnInitializedAsync()
    {
        listaAsesores = await ServicioUsuarios.ObtenerAsesoresAsync();
        await CargarDatos();
    }

    private async Task CambiarFiltro(ChangeEventArgs e)
    {
        if (Guid.TryParse(e.Value?.ToString(), out Guid id))
        {
            filtroAsesorId = id;
            var asesor = listaAsesores.FirstOrDefault(a => a.Id == id);
            tituloReporte = $"Reporte Individual: {asesor?.Nombre}";
        }
        else
        {
            filtroAsesorId = null;
            tituloReporte = "Reporte General de Atenciones";
        }
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        // 1. Obtenemos KPIs
        tiempoPromedio = await ServicioReportes.ObtenerTiempoPromedio(filtroAsesorId, fechaDesde, fechaHasta);

        // 2. Obtenemos el DETALLE (La lista real de tickets)
        listaDetalleTickets = await ServicioReportes.ObtenerDetalleTickets(filtroAsesorId, fechaDesde, fechaHasta);

        cargando = false;
    }

    private async Task ExportarExcel()
    {
        var csv = new StringBuilder();
        csv.AppendLine("REPORTE DE ATENCIONES - HELPDESK");
        csv.AppendLine($"Tipo;{tituloReporte}");
        csv.AppendLine($"Periodo;{fechaDesde:d} al {fechaHasta:d}");
        csv.AppendLine("");

        // Encabezados dinámicos
        var headers = "ID;FECHA CIERRE;TITULO;CATEGORIA;CLIENTE;CALIFICACION";
        if (filtroAsesorId == null) headers += ";ASESOR"; // Agregamos columna asesor si es reporte general
        csv.AppendLine(headers);

        // Filas de datos
        foreach (var t in listaDetalleTickets)
        {
            var linea = $"{t.Id};{t.FechaCierre};{t.Titulo};{t.Categoria?.Nombre};{t.Usuario?.Nombre};{t.SatisfaccionUsuario}";

            if (filtroAsesorId == null) linea += $";{t.Asesor?.Nombre}";

            csv.AppendLine(linea);
        }

        // Pie de página con totales
        csv.AppendLine("");
        csv.AppendLine($"TOTAL TICKETS;{listaDetalleTickets.Count}");
        csv.AppendLine($"TIEMPO PROMEDIO;{tiempoPromedio}");

        var bytes = Encoding.UTF8.GetBytes(csv.ToString());
        var base64 = Convert.ToBase64String(bytes);
        await JS.InvokeVoidAsync("descargarArchivo", $"Reporte_{DateTime.Now:yyyyMMdd}.csv", base64);
    }

    private async Task ImprimirPDF()
    {
        await JS.InvokeVoidAsync("print");
    }
}