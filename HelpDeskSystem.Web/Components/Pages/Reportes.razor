@page "/reportes"
@attribute [Authorize(Roles = "Administrador")]
@using HelpDeskSystem.Web.Services
@using HelpDeskSystem.Domain.Entities
@using HelpDeskSystem.Domain.Enums
@using System.Text
@using System.Globalization
@inject IReportService ServicioReportes
@inject IUsuarioService ServicioUsuarios
@inject IJSRuntime JS

<PageTitle>Reportes de Gestión | HelpDesk UTEPSA</PageTitle>

<style>
    /* Estilos específicos para reportes e impresión */
    .bg-report-header {
        background-color: var(--bg-subtle);
    }

    @@media print {
        .no-print, .sidebar-container, header, footer {
            display: none !important;
        }

        .container-fluid {
            padding: 0 !important;
        }

        .card-pro {
            border: 1px solid #eee !important;
            box-shadow: none !important;
            break-inside: avoid;
        }

        body {
            background-color: white !important;
            font-size: 10pt;
            color: black;
        }

        .badge-pill {
            border: 1px solid #ccc !important;
            color: black !important;
            background: transparent !important;
        }
    }
</style>

<div class="container-fluid px-4 py-4">

    @* --- BARRA DE FILTROS MAESTROS (Simetría de Controles) --- *@
    <div class="card-pro mb-4 no-print shadow-sm border-0 bg-surface">
        <div class="card-pro-body p-3">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label text-secondary fw-bold small text-uppercase ls-1">Identificar Asesor</label>
                    <div class="position-relative">
                        <select class="form-control-pro w-100 appearance-none shadow-none" @onchange="CambiarFiltro" style="cursor: pointer;">
                            <option value="">Vista General (Todos)</option>
                            @foreach (var asesor in listaAsesores)
                            {
                                <option value="@asesor.Id">@asesor.Nombre</option>
                            }
                        </select>
                        <i class="bi bi-person-badge position-absolute end-0 top-50 translate-middle-y me-3 text-secondary pointer-events-none"></i>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label text-secondary fw-bold small text-uppercase ls-1">Rango Desde</label>
                    <input type="date" class="form-control-pro w-100" @bind="fechaDesde" />
                </div>
                <div class="col-md-3">
                    <label class="form-label text-secondary fw-bold small text-uppercase ls-1">Rango Hasta</label>
                    <input type="date" class="form-control-pro w-100" @bind="fechaHasta" />
                </div>
                <div class="col-md-3">
                    <div class="d-flex gap-2">
                        <button class="btn btn-utepsa flex-grow-1 fw-bold shadow-red-glow" @onclick="CargarDatos">
                            <i class="bi bi-funnel-fill me-2"></i>GENERAR
                        </button>
                        <button class="btn btn-outline-success border-2 fw-bold px-3" @onclick="ExportarExcel" title="Exportar CSV">
                            <i class="bi bi-file-earmark-spreadsheet"></i>
                        </button>
                        <button class="btn btn-outline-secondary border-2 fw-bold px-3" @onclick="ImprimirPDF" title="Imprimir PDF">
                            <i class="bi bi-printer"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (cargando)
    {
        <div class="d-flex flex-column justify-content-center align-items-center py-5 animate-enter">
            <div class="spinner-border text-utepsa-red mb-3" style="width: 3rem; height: 3rem;" role="status"></div>
            <span class="text-secondary fw-bold ls-1">PROCESANDO DATOS...</span>
        </div>
    }
    else
    {
        @* --- RESUMEN KPI (Jerarquía Visual) --- *@
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3 animate-enter">
            <div>
                <h2 class="fw-bold text-primary mb-1" style="letter-spacing: -1px;">@tituloReporte</h2>
                <div class="d-flex align-items-center text-secondary small">
                    <i class="bi bi-calendar-range me-2 text-utepsa-red"></i>
                    <span class="fw-medium">Periodo: @(fechaDesde?.ToString("dd/MM/yyyy") ?? "Inicio") — @(fechaHasta?.ToString("dd/MM/yyyy") ?? "Hoy")</span>
                </div>
            </div>
            <div class="bg-primary bg-opacity-10 border border-primary border-opacity-25 rounded-pill px-4 py-2">
                <span class="text-primary fw-bold">Total: @listaDetalleTickets.Count Casos Cerrados</span>
            </div>
        </div>

        <div class="row g-4 mb-4 animate-enter" style="animation-delay: 0.1s;">
            @* KPI: Tiempo Promedio *@
            <div class="col-md-6 col-lg-4">
                <div class="card-pro h-100 border-start border-4 border-primary shadow-sm bg-surface">
                    <div class="card-body d-flex align-items-center p-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3 text-primary me-4">
                            <i class="bi bi-speedometer fs-2"></i>
                        </div>
                        <div>
                            <h6 class="text-uppercase text-secondary fw-bold ls-1 mb-1" style="font-size:0.65rem;">Eficiencia Operativa</h6>
                            <h3 class="fw-bold text-primary mb-0">@tiempoPromedio</h3>
                            <small class="text-muted">Tiempo medio de resolución</small>
                        </div>
                    </div>
                </div>
            </div>

            @* KPI: Satisfacción Media *@
            <div class="col-md-6 col-lg-4">
                <div class="card-pro h-100 border-start border-4 border-warning shadow-sm bg-surface">
                    <div class="card-body d-flex align-items-center p-4">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3 text-warning me-4">
                            <i class="bi bi-star-half fs-2"></i>
                        </div>
                        <div>
                            <h6 class="text-uppercase text-secondary fw-bold ls-1 mb-1" style="font-size:0.65rem;">Índice de Calidad</h6>
                            <h3 class="fw-bold text-primary mb-0">
                                @(listaDetalleTickets.Any(t => t.SatisfaccionUsuario != null)
                                                            ? listaDetalleTickets.Where(t => t.SatisfaccionUsuario != null).Average(t => (double)t.SatisfaccionUsuario!.Value).ToString("0.0", CultureInfo.InvariantCulture)
                                                            : "0.0") / 5.0
                            </h3>
                            <div class="text-warning small">
                                <i class="bi bi-star-fill"></i> Nivel de satisfacción de usuarios
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* --- TABLA DE ATENCIONES (Simetría y Alineación) --- *@
        <div class="card-pro shadow-pro border-0 bg-surface animate-enter" style="animation-delay: 0.2s;">
            <div class="card-pro-header border-bottom py-3 px-4 bg-subtle">
                <h6 class="mb-0 fw-bold text-primary">Detalle de Casos Finalizados</h6>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-subtle">
                        <tr class="text-secondary small fw-bold text-uppercase">
                            <th class="ps-4 py-3 border-0" style="letter-spacing: 0.5px;">Cierre</th>
                            <th class="border-0">Ticket / Asunto</th>
                            <th class="border-0">Categoría</th>
                            @if (filtroAsesorId == null)
                            {
                                <th class="border-0">Asesor Responsable</th>
                            }
                            <th class="border-0">Solicitante</th>
                            <th class="text-end pe-4 border-0">Calif.</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var t in listaDetalleTickets)
                        {
                            <tr class="border-bottom border-light">
                                <td class="ps-4 py-3">
                                    <div class="d-flex flex-column lh-1">
                                        <span class="fw-bold text-primary small">@t.FechaCierre?.ToString("dd MMM yyyy")</span>
                                        <small class="text-muted" style="font-size: 0.7rem;">@t.FechaCierre?.ToString("HH:mm")</small>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex flex-column lh-1">
                                        <span class="fw-bold text-primary" style="font-size: 0.9rem;">@t.Titulo</span>
                                        <small class="text-secondary">Ref: #@t.Id</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-subtle text-secondary border fw-semibold px-2 py-1" style="font-size: 0.7rem;">@t.Categoria?.Nombre</span>
                                </td>
                                @if (filtroAsesorId == null)
                                {
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-utepsa-red rounded-circle me-2" style="width: 8px; height: 8px;"></div>
                                            <span class="fw-bold text-primary small">@t.Asesor?.Nombre</span>
                                        </div>
                                    </td>
                                }
                                <td><span class="text-secondary small">@t.Usuario?.Nombre</span></td>
                                <td class="text-end pe-4">
                                    @if (t.SatisfaccionUsuario != null)
                                    {
                                        <div class="d-inline-flex align-items-center bg-warning bg-opacity-10 text-warning px-2 py-1 rounded border border-warning border-opacity-25 shadow-sm">
                                            <span class="fw-bold me-1">@t.SatisfaccionUsuario</span>
                                            <i class="bi bi-star-fill small"></i>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted opacity-50 small">—</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (listaDetalleTickets.Count == 0)
            {
                <div class="text-center py-5">
                    <i class="bi bi-search fs-1 text-secondary opacity-25 d-block mb-3"></i>
                    <p class="text-secondary fw-bold ls-1">SIN RESULTADOS PARA LOS FILTROS SELECCIONADOS</p>
                </div>
            }
        </div>
    }
</div>

@code {
    private bool cargando = true;
    private string tiempoPromedio = "0.0 h";
    private string tituloReporte = "Reporte Maestro de Atenciones";
    private Guid? filtroAsesorId = null;
    private DateTime? fechaDesde = DateTime.Today.AddDays(-30);
    private DateTime? fechaHasta = DateTime.Today;

    private List<Ticket> listaDetalleTickets = new();
    private List<Usuario> listaAsesores = new();

    protected override async Task OnInitializedAsync()
    {
        listaAsesores = await ServicioUsuarios.ObtenerAsesoresAsync();
        await CargarDatos();
    }

    private async Task CambiarFiltro(ChangeEventArgs e)
    {
        if (Guid.TryParse(e.Value?.ToString(), out Guid id))
        {
            filtroAsesorId = id;
            var asesor = listaAsesores.FirstOrDefault(a => a.Id == id);
            tituloReporte = $"Análisis de Desempeño: {asesor?.Nombre}";
        }
        else
        {
            filtroAsesorId = null;
            tituloReporte = "Reporte Maestro de Atenciones";
        }
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        tiempoPromedio = await ServicioReportes.ObtenerTiempoPromedio(filtroAsesorId, fechaDesde, fechaHasta);
        listaDetalleTickets = await ServicioReportes.ObtenerDetalleTickets(filtroAsesorId, fechaDesde, fechaHasta);
        cargando = false;
    }

    private async Task ExportarExcel()
    {
        var csv = new StringBuilder();
        csv.AppendLine("REPORTE DE GESTIÓN HELPDESK UTEPSA");
        csv.AppendLine($"Alcance;{tituloReporte}");
        csv.AppendLine($"Periodo;{fechaDesde:d} al {fechaHasta:d}");
        csv.AppendLine("");

        var headers = "ID;FECHA CIERRE;TITULO;CATEGORIA;CLIENTE;CALIFICACION";
        if (filtroAsesorId == null) headers += ";ASESOR";
        csv.AppendLine(headers);

        foreach (var t in listaDetalleTickets)
        {
            var linea = $"{t.Id};{t.FechaCierre:g};{t.Titulo};{t.Categoria?.Nombre};{t.Usuario?.Nombre};{t.SatisfaccionUsuario}";
            if (filtroAsesorId == null) linea += $";{t.Asesor?.Nombre}";
            csv.AppendLine(linea);
        }

        csv.AppendLine("");
        csv.AppendLine($"TICKET TOTALES;{listaDetalleTickets.Count}");
        csv.AppendLine($"EFICIENCIA MEDIA;{tiempoPromedio}");

        var bytes = Encoding.UTF8.GetBytes(csv.ToString());
        var base64 = Convert.ToBase64String(bytes);
        await JS.InvokeVoidAsync("descargarArchivo", $"Reporte_{DateTime.Now:yyyyMMdd}_UTEPSA.csv", base64);
    }

    private async Task ImprimirPDF() => await JS.InvokeVoidAsync("print");
}