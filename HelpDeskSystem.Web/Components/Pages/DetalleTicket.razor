@page "/ticket/{Id:int}"
@attribute [Authorize]
@using HelpDeskSystem.Domain.Entities
@using HelpDeskSystem.Domain.Enums
@using HelpDeskSystem.Web.Services
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using System.Threading
@using System.Globalization
@inject ITicketService ServicioTickets
@inject IUsuarioService ServicioUsuarios
@inject IChatService ServicioChat
@inject NavigationManager Navegacion
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS
@inject TicketStateContainer StateContainer
@implements IDisposable

<PageTitle>Ticket #@Id | HelpDesk</PageTitle>

<div class="container-fluid py-4 px-md-5 bg-app min-vh-100">

    @* --- BOTÓN VOLVER: Alineación con Icono --- *@
    <div class="mb-4">
        <a href="/" class="text-decoration-none text-secondary fw-bold small hover-red d-inline-flex align-items-center transition-all">
            <i class="bi bi-arrow-left-circle-fill me-2 fs-5"></i> Volver al Tablero
        </a>
    </div>

    @if (miTicket == null)
    {
        <div class="d-flex justify-content-center align-items-center" style="height: 50vh;">
            <div class="spinner-grow text-utepsa-red" role="status"></div>
        </div>
    }
    else
    {
        <div class="row g-4 animate-enter">

            @* COLUMNA DERECHA: INFORMACIÓN Y CONTEXTO (Alineación Estricta) *@
            <div class="col-lg-4 order-lg-2">

                @* 1. TARJETA DE ESTADO *@
                <div class="card-pro mb-3 shadow-sm border-0">
                    <div class="card-pro-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <span class="badge bg-subtle text-secondary border px-2 py-1">ID: #@miTicket.Id</span>
                            <span class="badge-pill @ObtenerClaseBadge(miTicket.Estado)">
                                <i class="bi bi-circle-fill me-1" style="font-size: 0.4rem;"></i> @miTicket.Estado
                            </span>
                        </div>

                        <h4 class="fw-bold text-primary mb-2" style="letter-spacing: -0.5px;">@miTicket.Titulo</h4>
                        <div class="text-secondary small mb-4 d-flex align-items-center">
                            <i class="bi bi-clock-history me-2 text-utepsa-red"></i>
                            @miTicket.FechaCreacion.ToString("f", CultureInfo.CurrentCulture)
                        </div>

                        @if (miTicket.EsUrgente)
                        {
                            <div class="alert alert-danger d-flex align-items-start p-3 mb-4 border-0 shadow-sm" style="border-radius: var(--radius-md);">
                                <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i>
                                <div>
                                    <strong class="d-block mb-1">PRIORIDAD CRÍTICA</strong>
                                    <span class="small opacity-75">Este caso requiere atención inmediata según los protocolos de UTEPSA.</span>
                                </div>
                            </div>
                        }

                        <hr class="border-secondary opacity-10 mb-4" />

                        @* ZONA DE ACCIONES DINÁMICAS *@
                        <div class="d-grid gap-2">
                            @if (rolUsuarioActual == "Administrador" && miTicket.Estado != EstadoTicket.Resuelto)
                            {
                                <div class="input-group shadow-sm" style="border-radius: var(--radius-md); overflow: hidden;">
                                    <select class="form-select border-0 bg-subtle text-primary small" @bind="idAsesorSeleccionado">
                                        <option value="@Guid.Empty">-- Asignar Asesor --</option>
                                        @foreach (var asesor in listaAsesores)
                                        {
                                            <option value="@asesor.Id">@asesor.Nombre</option>
                                        }
                                    </select>
                                    <button class="btn btn-dark px-3 fw-bold" @onclick="AsignarAsesor">OK</button>
                                </div>
                            }
                            else if (rolUsuarioActual == "Asesor" && miTicket.AsesorId == null && miTicket.Estado != EstadoTicket.Resuelto)
                            {
                                <button class="btn btn-utepsa py-3 shadow-red-glow" @onclick="AutoAsignar">
                                    <i class="bi bi-person-check-fill me-2"></i> Atender este Caso
                                </button>
                            }
                            else if (miTicket.AsesorId == usuarioActualId && miTicket.Estado != EstadoTicket.Resuelto)
                            {
                                <button class="btn btn-success fw-bold py-3 shadow-sm border-0" @onclick="MarcarComoResuelto" style="background-color: #198754;">
                                    <i class="bi bi-check-lg me-2"></i> Finalizar y Cerrar
                                </button>
                            }
                        </div>
                    </div>
                </div>

                @* 2. DETALLES (Alineación de Iconos) *@
                <div class="card-pro mb-3 shadow-sm border-0">
                    <div class="card-pro-body p-4">
                        <h6 class="text-uppercase text-secondary fw-bold mb-4" style="font-size: 0.7rem; letter-spacing: 1.5px;">Detalles del Ticket</h6>

                        <div class="d-flex align-items-center mb-4 transition-all hover-red">
                            <div class="bg-subtle text-primary rounded-circle d-flex align-items-center justify-content-center shadow-sm me-3" style="width: 42px; height: 42px; flex-shrink: 0;">
                                <i class="bi bi-person-circle fs-5"></i>
                            </div>
                            <div class="lh-sm">
                                <small class="text-secondary d-block fw-bold" style="font-size: 0.65rem; text-transform: uppercase;">Solicitante</small>
                                <span class="fw-bold text-primary">@(miTicket.Usuario?.Nombre ?? "Anónimo")</span>
                            </div>
                        </div>

                        <div class="d-flex align-items-center mb-4 transition-all">
                            <div class="bg-subtle text-primary rounded-circle d-flex align-items-center justify-content-center shadow-sm me-3" style="width: 42px; height: 42px; flex-shrink: 0;">
                                <i class="bi bi-grid-fill fs-5 text-utepsa-red"></i>
                            </div>
                            <div class="lh-sm">
                                <small class="text-secondary d-block fw-bold" style="font-size: 0.65rem; text-transform: uppercase;">Categoría</small>
                                <span class="fw-bold text-primary">@(miTicket.Categoria?.Nombre ?? "General")</span>
                            </div>
                        </div>

                        @if (miTicket.Asesor != null)
                        {
                            <div class="d-flex align-items-center transition-all">
                                <div class="bg-utepsa-red text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm me-3" style="width: 42px; height: 42px; flex-shrink: 0;">
                                    <i class="bi bi-headset fs-5"></i>
                                </div>
                                <div class="lh-sm">
                                    <small class="text-secondary d-block fw-bold" style="font-size: 0.65rem; text-transform: uppercase;">Atendido por</small>
                                    <span class="fw-bold text-primary">@miTicket.Asesor.Nombre</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                @* 3. DESCRIPCIÓN (UX: Colapsable) *@
                <div class="card-pro shadow-sm border-0">
                    <div class="card-pro-header border-bottom py-3 cursor-pointer d-flex justify-content-between align-items-center bg-subtle" data-bs-toggle="collapse" data-bs-target="#collapseDesc">
                        <h6 class="mb-0 fw-bold text-primary small"><i class="bi bi-card-text me-2"></i>Descripción Original</h6>
                        <i class="bi bi-chevron-expand text-secondary"></i>
                    </div>
                    <div id="collapseDesc" class="collapse show">
                        <div class="card-pro-body bg-surface p-4">
                            @if (modoEdicion)
                            {
                                <EditForm Model="miTicket" OnValidSubmit="GuardarCambios">
                                    <InputTextArea @bind-Value="miTicket.Descripcion" class="form-control-pro w-100 mb-3" rows="6" />
                                    <div class="d-flex gap-2 justify-content-end">
                                        <button type="button" class="btn btn-light btn-sm fw-bold px-3" @onclick="CancelarEdicion">Cancelar</button>
                                        <button type="submit" class="btn btn-dark btn-sm fw-bold px-3">Guardar</button>
                                    </div>
                                </EditForm>
                            }
                            else
                            {
                                <p class="mb-0 text-primary small" style="white-space: pre-wrap; line-height: 1.6;">@miTicket.Descripcion</p>
                                @if (!miTicket.FueEditado && miTicket.UsuarioId == usuarioActualId && miTicket.Estado == EstadoTicket.Abierto)
                                {
                                    <div class="text-end mt-3 border-top pt-2">
                                        <button class="btn btn-link btn-sm p-0 text-secondary text-decoration-none hover-red" @onclick="() => modoEdicion = true">
                                            <i class="bi bi-pencil-square me-1"></i> Corregir descripción
                                        </button>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>

            @* COLUMNA IZQUIERDA: COMUNICACIÓN (Messaging Rules) *@
            <div class="col-lg-8 order-lg-1">
                <div class="card-pro shadow-pro border-0 h-100 d-flex flex-column bg-surface">

                    @* HEADER CHAT: Alineación *@
                    <div class="card-pro-header border-bottom py-3 px-4 d-flex align-items-center bg-subtle">
                        <div class="bg-utepsa-red rounded-circle me-3 d-flex align-items-center justify-content-center shadow-sm" style="width: 32px; height: 32px;">
                            <i class="bi bi-chat-fill text-white small"></i>
                        </div>
                        <h6 class="mb-0 fw-bold text-primary">Canal de Comunicación Directo</h6>
                    </div>

                    @* BODY CHAT: WhatsApp Style *@
                    <div id="chatBox" class="card-pro-body bg-chat p-4 d-flex flex-column custom-scrollbar" style="height: 600px; overflow-y: auto;">
                        @if (mensajes.Count == 0)
                        {
                            <div class="text-center my-auto opacity-25">
                                <i class="bi bi-chat-left-dots fs-1 d-block mb-3"></i>
                                <span class="fw-bold small text-uppercase ls-1">Sin mensajes previos</span>
                            </div>
                        }
                        else
                        {
                            @foreach (var msg in mensajes)
                            {
                                bool soyYo = msg.UsuarioId == usuarioActualId;
                                <div class="d-flex w-100 mb-4 @(soyYo ? "justify-content-end" : "justify-content-start")">
                                    <div style="max-width: 80%;">
                                        <div class="d-flex align-items-end gap-2 @(soyYo ? "flex-row-reverse" : "")">

                                            <div class="avatar-chat shadow-sm flex-shrink-0 @(soyYo ? "bg-utepsa-red text-white" : "bg-dark text-white")"
                                                 style="width: 28px; height: 28px; border-radius: 8px; display: grid; place-items: center; font-size: 0.75rem; fw-bold;">
                                                @(msg.Usuario?.Nombre?.Substring(0, 1) ?? "?")
                                            </div>

                                            <div class="bubble @(soyYo ? "bubble-me" : "bubble-other shadow-sm")">
                                                @if (!soyYo)
                                                {
                                                    <div class="fw-bold mb-1 text-utepsa-red" style="font-size: 0.7rem;">@msg.Usuario?.Nombre</div>
                                                }
                                                <div class="text-break" style="font-size: 0.9rem;">@msg.Contenido</div>

                                                @if (!string.IsNullOrWhiteSpace(msg.AdjuntoUrl))
                                                {
                                                    <div class="mt-2 pt-2 border-top border-light border-opacity-10">
                                                        <a href="@msg.AdjuntoUrl" target="_blank" class="btn btn-sm btn-white border-0 w-100 text-truncate text-dark small py-1 shadow-sm">
                                                            <i class="bi bi-file-earmark-arrow-down me-1 text-utepsa-red"></i> Adjunto
                                                        </a>
                                                    </div>
                                                }

                                                <div class="text-end mt-1 @(soyYo ? "text-white-50" : "text-muted")" style="font-size: 0.6rem;">
                                                    @msg.FechaHora.ToString("HH:mm") @(soyYo ? "✓✓" : "")
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    @* FOOTER CHAT: Input Moderno y Centrado *@
                    <div class="card-pro-footer p-4 border-top bg-subtle">
                        @if (miTicket.Estado == EstadoTicket.Resuelto)
                        {
                            <div class="bg-surface rounded-pill border p-3 text-center shadow-sm">
                                <i class="bi bi-shield-lock-fill text-secondary me-2"></i>
                                <span class="small fw-bold text-secondary text-uppercase ls-1">El caso ha sido resuelto y el chat está cerrado</span>
                            </div>

                            @if (miTicket.UsuarioId == usuarioActualId && miTicket.SatisfaccionUsuario == null)
                            {
                                <div class="text-center mt-4 animate-enter">
                                    <h6 class="fw-bold text-primary mb-3 small">¿Cómo calificarías la resolución de este problema?</h6>
                                    <div class="d-flex justify-content-center gap-3">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            int r = i;
                                            <button class="btn btn-light rounded-circle shadow-sm border p-0 hover-scale"
                                                    style="width: 50px; height: 50px;"
                                                    @onclick="() => Calificar(r)" disabled="@estaCalificando">
                                                <i class="bi bi-star-fill @(i <= 3 ? "text-warning" : "text-success") fs-4"></i>
                                            </button>
                                        }
                                    </div>
                                </div>
                            }
                        }
                        else if (miTicket.AsesorId == null && rolUsuarioActual == "Usuario")
                        {
                            <div class="bg-warning bg-opacity-10 border border-warning border-opacity-25 rounded-pill p-3 text-center shadow-sm">
                                <div class="spinner-grow spinner-grow-sm text-warning me-2" role="status"></div>
                                <span class="small fw-bold text-warning-emphasis text-uppercase ls-1">Buscando un asesor especializado para tu caso...</span>
                            </div>
                        }
                        else
                        {
                            <EditForm Model="nuevoMensaje" OnValidSubmit="EnviarMensaje">
                                <div class="input-modern-container d-flex align-items-center p-2 shadow-sm bg-surface border-0">
                                    <label class="btn btn-subtle rounded-circle border-0 text-secondary d-grid place-items-center"
                                           style="width: 44px; height: 44px; cursor: pointer;" title="Adjuntar Evidencia">
                                        <i class="bi bi-paperclip fs-5"></i>
                                        <InputFile OnChange="ManejarSeleccionArchivo" style="display: none;" />
                                    </label>

                                    <div class="flex-grow-1 mx-2">
                                        <InputText id="txtMensaje" @bind-Value="nuevoMensaje.Contenido"
                                                   class="form-control border-0 shadow-none bg-transparent py-2 text-primary"
                                                   placeholder="Escribe tu respuesta técnica aquí..." autocomplete="off" />
                                    </div>

                                    <button class="btn btn-utepsa rounded-circle d-grid place-items-center shadow-red-glow"
                                            style="width: 44px; height: 44px;" type="submit" disabled="@enviandoMensaje">
                                        @if (enviandoMensaje)
                                        {
                                            <span class="spinner-border spinner-border-sm"></span>
                                        }
                                        else
                                        {

                                            <i class="bi bi-send-fill ps-1"></i>
                                        }
                                    </button>
                                </div>
                            </EditForm>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    @* MODAL IMAGEN: Centrado absoluto *@
    @if (!string.IsNullOrEmpty(imagenModalUrl))
    {
        <div class="modal-backdrop-custom animate-enter" @onclick="CerrarModal">
            <button class="btn-close-modal"><i class="bi bi-x-lg"></i></button>
            <img src="@imagenModalUrl" class="modal-image-content shadow-lg border border-white border-opacity-10" />
        </div>
    }
</div>

