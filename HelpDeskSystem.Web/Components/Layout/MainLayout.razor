@inherits LayoutComponentBase
@using HelpDeskSystem.Web.Services
@using HelpDeskSystem.Domain.Enums
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject NavigationManager NavManager
@inject TicketStateContainer StateContainer
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS
@implements IDisposable

<div class="d-flex w-100 h-100 overflow-hidden bg-app font-main">

    @* === SIDEBAR === *@
    @* CORRECCIÓN: Se añade lógica para mostrar/ocultar en móvil mediante la clase 'show-mobile' *@
    <aside class="sidebar-container @(mostrarMenuMovil ? "show-mobile" : "")">
        <NavMenu />
    </aside>

    @* Overlay para cerrar el menú al tocar fuera en móviles *@
    @if (mostrarMenuMovil)
    {
        <div class="sidebar-overlay d-lg-none" @onclick="ToggleMenu"></div>
    }

    @* === CONTENIDO PRINCIPAL === *@
    <div class="flex-grow-1 d-flex flex-column h-100 overflow-hidden position-relative">

        @* HEADER *@
        <header class="bg-white border-bottom shadow-sm d-flex align-items-center justify-content-between px-4 py-2" style="height: 64px; flex-shrink: 0; z-index: 1000;">

            <div class="d-flex align-items-center overflow-hidden">
                @* CORRECCIÓN: El botón ahora dispara la función ToggleMenu en lugar de un alert *@
                <button class="btn btn-link text-dark d-lg-none me-2 p-0" @onclick="ToggleMenu">
                    <i class="bi bi-list fs-4"></i>
                </button>

                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 align-items-center bg-transparent p-0">
                        <li class="breadcrumb-item">
                            <a href="/" class="text-decoration-none text-muted small d-flex align-items-center hover-red">
                                <i class="bi bi-house-door-fill me-1"></i> Inicio
                            </a>
                        </li>
                        @if (!string.IsNullOrEmpty(nombrePagina) && nombrePagina != "Tablero Principal")
                        {
                            <li class="breadcrumb-item active text-dark fw-bold small d-flex align-items-center" aria-current="page">
                                <span class="badge bg-light text-dark border ms-1">@nombrePagina</span>
                            </li>
                        }
                    </ol>
                </nav>
            </div>

            @* Perfil de Usuario *@
            <AuthorizeView>
                <Authorized>
                    <div class="d-flex align-items-center gap-3 ps-3 border-start">
                        <div class="text-end lh-1 d-none d-md-block">
                            <div class="fw-bold text-dark" style="font-size: 0.9rem;">@context.User.Identity?.Name</div>
                            <small class="text-muted" style="font-size: 0.75rem;">
                                @(context.User.FindFirst(ClaimTypes.Role)?.Value?.ToUpper() ?? "USUARIO")
                            </small>
                        </div>

                        <div class="position-relative">
                            <div class="rounded-circle bg-dark text-white d-flex align-items-center justify-content-center shadow-sm fw-bold"
                                 style="width: 40px; height: 40px; font-size: 1.1rem; cursor: pointer; border: 2px solid #fff;">
                                @ObtenerIniciales(context.User.Identity?.Name)
                            </div>
                            <span class="position-absolute bottom-0 end-0 bg-success border border-white rounded-circle"
                                  style="width: 12px; height: 12px;"></span>
                        </div>
                    </div>
                </Authorized>
            </AuthorizeView>
        </header>

        @* CONTENEDOR CON SCROLL INTELIGENTE *@
        <main class="flex-grow-1 overflow-auto d-flex flex-column" style="background-color: var(--bg-app);">

            @* Este div absorbe el espacio sobrante si la página tiene poco contenido *@
            <div class="flex-grow-1 p-0">
                @Body
            </div>

            @* El footer ahora se pegará siempre al final (mt-auto) *@
            <footer class="text-center text-muted small py-3 opacity-50 border-top mt-auto bg-white bg-opacity-25">
                &copy; @DateTime.Now.Year HelpDesk UTEPSA - Todos los derechos reservados
            </footer>
        </main>
    </div>
</div>

<style>
    .sidebar-container {
        width: 260px;
        flex-shrink: 0;
        z-index: 1040;
        transition: transform 0.3s ease;
        background: var(--utepsa-dark);
    }

    /* Estilos para móviles */
    @@media (max-width: 991.98px) {
        .sidebar-container {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            transform: translateX(-100%);
        }

            .sidebar-container.show-mobile {
                transform: translateX(0);
            }

        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0,0,0,0.5);
            z-index: 1035;
        }
    }

    /* Estilos base */
    .font-main {
        font-family: 'Segoe UI', system-ui, sans-serif;
    }

    .bg-app {
        background-color: #f3f4f6;
    }

    .scroll-smooth {
        scroll-behavior: smooth;
    }

    .hover-red:hover {
        color: var(--utepsa-red) !important;
    }
</style>

@code {
    private string nombrePagina = "";
    private bool mostrarMenuMovil = false; // Nueva variable de estado

    private void ToggleMenu() => mostrarMenuMovil = !mostrarMenuMovil;

    protected override void OnInitialized()
    {
        NavManager.LocationChanged += AlCambiarUrl;
        ActualizarNombrePagina();
        StateContainer.OnChange += ManejarCambioGlobal;
    }

    private void AlCambiarUrl(object? sender, LocationChangedEventArgs e)
    {
        mostrarMenuMovil = false; // Cerrar menú al navegar
        ActualizarNombrePagina();
        StateHasChanged();
    }

    private void ActualizarNombrePagina()
    {
        var uri = NavManager.Uri.ToLower();
        if (uri.EndsWith("dashboard")) nombrePagina = "Estadísticas";
        else if (uri.Contains("manuales")) nombrePagina = "Base de Conocimiento";
        else if (uri.Contains("nuevo-ticket")) nombrePagina = "Nuevo Ticket";
        else if (uri.Contains("ticket/")) nombrePagina = "Detalle de Ticket";
        else nombrePagina = "Tablero Principal";
    }

    // El resto de tus métodos (ManejarCambioGlobal, ObtenerIniciales, Dispose) se mantienen igual...
    private async void ManejarCambioGlobal(int? ticketId, string? tituloTicket, TipoNotificacion tipo, string? remitente, Guid? ownerId, Guid? asesorId)
    {
        try
        {
            await InvokeAsync(async () =>
            {
                var authState = await AuthStateProvider.GetAuthenticationStateAsync();
                var user = authState.User;
                if (user?.Identity?.IsAuthenticated != true) return;

                var myIdStr = user.FindFirst(ClaimTypes.Sid)?.Value ?? user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                if (Guid.TryParse(myIdStr, out Guid myId))
                {
                    if (!string.IsNullOrEmpty(remitente) && remitente == user.Identity.Name) return;
                    if (asesorId != null && myId != ownerId && myId != asesorId) return;
                }

                var urlActual = NavManager.Uri.ToLower();
                bool estaViendoElTicket = ticketId.HasValue && urlActual.Contains($"/ticket/{ticketId}");
                string mensajeNotificacion = !string.IsNullOrEmpty(tituloTicket) && !string.IsNullOrEmpty(remitente)
                    ? $"{remitente}: {tituloTicket}" : "Actividad en el sistema";

                try { await JS.InvokeVoidAsync("verificarYNotificar", mensajeNotificacion, "info", estaViendoElTicket); } catch { }
                StateHasChanged();
            });
        }
        catch { }
    }

    private string ObtenerIniciales(string? nombre) => string.IsNullOrEmpty(nombre) ? "U" : nombre.Substring(0, 1).ToUpper();

    public void Dispose()
    {
        NavManager.LocationChanged -= AlCambiarUrl;
        StateContainer.OnChange -= ManejarCambioGlobal;
    }
}