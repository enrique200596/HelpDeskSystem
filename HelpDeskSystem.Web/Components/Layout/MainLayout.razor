@inherits LayoutComponentBase
@using HelpDeskSystem.Web.Services
@using HelpDeskSystem.Domain.Enums
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject NavigationManager NavManager
@inject TicketStateContainer StateContainer
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS
@implements IDisposable

<div class="d-flex w-100 h-100 overflow-hidden bg-app font-main">

    @* === SIDEBAR === *@
    <aside class="sidebar-container @(mostrarMenuMovil ? "show-mobile" : "")">
        <NavMenu />
    </aside>

    @* Overlay para móviles *@
    @if (mostrarMenuMovil)
    {
        <div class="sidebar-overlay d-lg-none" @onclick="ToggleMenu"></div>
    }

    @* === CONTENIDO PRINCIPAL === *@
    <div class="flex-grow-1 d-flex flex-column h-100 overflow-hidden position-relative">

        @* HEADER OPTIMIZADO: Alineación matemática de elementos *@
        <header class="bg-surface border-bottom shadow-sm d-flex align-items-center justify-content-between px-4"
                style="height: 64px; flex-shrink: 0; z-index: 1000;">

            <div class="d-flex align-items-center overflow-hidden">
                <button class="btn btn-link text-primary d-lg-none me-2 p-0" @onclick="ToggleMenu">
                    <i class="bi bi-list fs-4"></i>
                </button>

                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 align-items-center bg-transparent p-0">
                        <li class="breadcrumb-item">
                            <a href="/" class="text-decoration-none text-secondary small d-flex align-items-center hover-red">
                                <i class="bi bi-house-door-fill me-1"></i> Inicio
                            </a>
                        </li>
                        @if (!string.IsNullOrEmpty(nombrePagina) && nombrePagina != "Tablero Principal")
                        {
                            <li class="breadcrumb-item active text-primary fw-bold small d-flex align-items-center" aria-current="page">
                                <span class="badge bg-subtle text-primary border ms-1" style="font-weight: 600;">@nombrePagina</span>
                            </li>
                        }
                    </ol>
                </nav>
            </div>

            @* Lado Derecho: Toggle de Tema + Perfil *@
            <div class="d-flex align-items-center gap-3">

                @* Botón de Cambio de Tema (UX: Fácil acceso) *@
                <button class="btn btn-link text-secondary p-0 border-0" @onclick="ToggleDarkMode" title="Cambiar Tema">
                    <i class="bi @(isDarkMode ? "bi-sun-fill text-warning" : "bi-moon-stars-fill") fs-5"></i>
                </button>

                <AuthorizeView>
                    <Authorized>
                        <div class="d-flex align-items-center gap-3 ps-3 border-start" style="height: 32px;">
                            <div class="text-end lh-1 d-none d-md-block">
                                <div class="fw-bold text-primary" style="font-size: 0.85rem;">@context.User.Identity?.Name</div>
                                <small class="text-secondary" style="font-size: 0.7rem; font-weight: 500; letter-spacing: 0.5px;">
                                    @(context.User.FindFirst(ClaimTypes.Role)?.Value?.ToUpper() ?? "USUARIO")
                                </small>
                            </div>

                            <div class="position-relative">
                                <div class="rounded-circle bg-utepsa-red text-white d-flex align-items-center justify-content-center shadow-sm fw-bold"
                                     style="width: 38px; height: 38px; font-size: 1rem; border: 2px solid var(--bg-surface);">
                                    @ObtenerIniciales(context.User.Identity?.Name)
                                </div>
                                <span class="position-absolute bottom-0 end-0 bg-success border border-white rounded-circle"
                                      style="width: 10px; height: 10px;"></span>
                            </div>
                        </div>
                    </Authorized>
                </AuthorizeView>
            </div>
        </header>

        @* CONTENEDOR PRINCIPAL *@
        <main class="flex-grow-1 overflow-auto d-flex flex-column">

            <div class="flex-grow-1 p-0">
                @Body
            </div>

            <footer class="text-center text-secondary small py-3 border-top mt-auto bg-surface">
                <span class="opacity-75">&copy; @DateTime.Now.Year <strong>HelpDesk UTEPSA</strong> - Gestión Tecnológica</span>
            </footer>
        </main>
    </div>
</div>

<style>
    .sidebar-container {
        width: 260px;
        flex-shrink: 0;
        z-index: 1040;
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: var(--utepsa-dark);
    }

    /* Ajustes de alineación para el breadcrumb */
    .breadcrumb-item + .breadcrumb-item::before {
        color: var(--text-light);
        padding: 0 0.5rem;
    }

    /* Fondo dinámico para el header */
    .bg-surface {
        background-color: var(--bg-surface) !important;
    }

    .bg-subtle {
        background-color: var(--bg-subtle) !important;
    }

    .text-primary {
        color: var(--text-primary) !important;
    }

    .text-secondary {
        color: var(--text-secondary) !important;
    }

    @@media (max-width: 991.98px) {
        .sidebar-container {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            transform: translateX(-100%);
        }

            .sidebar-container.show-mobile {
                transform: translateX(0);
            }

        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0,0,0,0.5);
            z-index: 1035;
        }
    }
</style>

@code {
    private string nombrePagina = "";
    private bool mostrarMenuMovil = false;
    private bool isDarkMode = false; // Estado del tema

    private void ToggleMenu() => mostrarMenuMovil = !mostrarMenuMovil;

    // Lógica de intercambio de temas (Claro/Oscuro)
    private async Task ToggleDarkMode()
    {
        isDarkMode = !isDarkMode;
        await JS.InvokeVoidAsync("document.documentElement.setAttribute", "data-theme", isDarkMode ? "dark" : "light");
    }

    protected override void OnInitialized()
    {
        NavManager.LocationChanged += AlCambiarUrl;
        ActualizarNombrePagina();
        StateContainer.OnChange += ManejarCambioGlobal;
    }

    private void AlCambiarUrl(object? sender, LocationChangedEventArgs e)
    {
        mostrarMenuMovil = false;
        ActualizarNombrePagina();
        StateHasChanged();
    }

    private void ActualizarNombrePagina()
    {
        var uri = NavManager.Uri.ToLower();
        if (uri.EndsWith("dashboard")) nombrePagina = "Estadísticas";
        else if (uri.Contains("manuales")) nombrePagina = "Base de Conocimiento";
        else if (uri.Contains("nuevo-ticket")) nombrePagina = "Nuevo Ticket";
        else if (uri.Contains("ticket/")) nombrePagina = "Detalle de Ticket";
        else nombrePagina = "Tablero Principal";
    }

    private async void ManejarCambioGlobal(int? ticketId, string? tituloTicket, TipoNotificacion tipo, string? remitente, Guid? ownerId, Guid? asesorId)
    {
        try
        {
            await InvokeAsync(async () =>
            {
                var authState = await AuthStateProvider.GetAuthenticationStateAsync();
                var user = authState.User;
                if (user?.Identity?.IsAuthenticated != true) return;

                var myIdStr = user.FindFirst(ClaimTypes.Sid)?.Value ?? user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                if (Guid.TryParse(myIdStr, out Guid myId))
                {
                    if (!string.IsNullOrEmpty(remitente) && remitente == user.Identity.Name) return;
                    if (asesorId != null && myId != ownerId && myId != asesorId) return;
                }

                var urlActual = NavManager.Uri.ToLower();
                bool estaViendoElTicket = ticketId.HasValue && urlActual.Contains($"/ticket/{ticketId}");
                string mensajeNotificacion = !string.IsNullOrEmpty(tituloTicket) && !string.IsNullOrEmpty(remitente)
                    ? $"{remitente}: {tituloTicket}" : "Actividad en el sistema";

                try { await JS.InvokeVoidAsync("verificarYNotificar", mensajeNotificacion, "info", estaViendoElTicket); } catch { }
                StateHasChanged();
            });
        }
        catch { }
    }

    private string ObtenerIniciales(string? nombre) => string.IsNullOrEmpty(nombre) ? "U" : nombre.Substring(0, 1).ToUpper();

    public void Dispose()
    {
        NavManager.LocationChanged -= AlCambiarUrl;
        StateContainer.OnChange -= ManejarCambioGlobal;
    }
}