@inherits LayoutComponentBase
@using HelpDeskSystem.Web.Services
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject NavigationManager NavManager
@inject TicketStateContainer StateContainer
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS
@implements IDisposable

<div class="d-flex w-100 h-100 overflow-hidden bg-app font-main">

    @* === SIDEBAR (Fijo a la izquierda) === *@
    <aside class="d-none d-lg-flex flex-column flex-shrink-0" style="width: 260px; z-index: 1040;">
        <NavMenu />
    </aside>

    @* === CONTENIDO PRINCIPAL === *@
    <div class="flex-grow-1 d-flex flex-column h-100 overflow-hidden position-relative">

        @* HEADER FLOTANTE *@
        <header class="bg-white border-bottom shadow-sm d-flex align-items-center justify-content-between px-4 py-2" style="height: 64px; flex-shrink: 0; z-index: 1000;">

            @* 1. Breadcrumbs / Título Dinámico *@
            <div class="d-flex align-items-center overflow-hidden">
                <button class="btn btn-link text-dark d-lg-none me-2 p-0" onclick="alert('Menu móvil pendiente de JS')">
                    <i class="bi bi-list fs-4"></i>
                </button>

                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 align-items-center bg-transparent p-0">
                        <li class="breadcrumb-item">
                            <a href="/" class="text-decoration-none text-muted small d-flex align-items-center hover-red">
                                <i class="bi bi-house-door-fill me-1"></i> Inicio
                            </a>
                        </li>
                        @if (!string.IsNullOrEmpty(nombrePagina) && nombrePagina != "Tablero Principal")
                        {
                            <li class="breadcrumb-item active text-dark fw-bold small d-flex align-items-center" aria-current="page">
                                <span class="badge bg-light text-dark border ms-1">@nombrePagina</span>
                            </li>
                        }
                    </ol>
                </nav>
            </div>

            @* 2. Perfil de Usuario *@
            <AuthorizeView>
                <Authorized>
                    <div class="d-flex align-items-center gap-3 ps-3 border-start">
                        <div class="text-end lh-1 d-none d-md-block">
                            <div class="fw-bold text-dark" style="font-size: 0.9rem;">@context.User.Identity?.Name</div>
                            <small class="text-muted" style="font-size: 0.75rem;">
                                @(context.User.FindFirst(ClaimTypes.Role)?.Value?.ToUpper() ?? "USUARIO")
                            </small>
                        </div>

                        <div class="position-relative">
                            <div class="rounded-circle bg-dark text-white d-flex align-items-center justify-content-center shadow-sm fw-bold"
                                 style="width: 40px; height: 40px; font-size: 1.1rem; cursor: pointer; border: 2px solid #fff;">
                                @ObtenerIniciales(context.User.Identity?.Name)
                            </div>
                            @* Punto verde de "Online" *@
                            <span class="position-absolute bottom-0 end-0 bg-success border border-white rounded-circle"
                                  style="width: 12px; height: 12px;"></span>
                        </div>
                    </div>
                </Authorized>
            </AuthorizeView>

        </header>

        @* CONTENEDOR CON SCROLL *@
        <main class="flex-grow-1 overflow-auto p-0 scroll-smooth">
            @* Aquí se renderiza Home, Dashboard, etc. *@
            @Body

            <div class="container-fluid px-4 py-3">
                <footer class="text-center text-muted small mt-4 pb-4 opacity-50">
                    &copy; @DateTime.Now.Year HelpDesk UTEPSA - Todos los derechos reservados
                </footer>
            </div>
        </main>
    </div>
</div>

<div id="blazor-error-ui">
    Ha ocurrido un error inesperado.
    <a href="" class="reload">Recargar</a>
    <a class="dismiss">🗙</a>
</div>

<style>
    .font-main {
        font-family: 'Segoe UI', system-ui, sans-serif;
    }

    .bg-app {
        background-color: #f3f4f6;
    }

    .scroll-smooth {
        scroll-behavior: smooth;
    }

    .hover-red:hover {
        color: var(--utepsa-red) !important;
    }
</style>

@code {
    private string nombrePagina = "";

    // --- LÓGICA DE NOTIFICACIONES (PRESERVADA) ---
    private async void ManejarCambioGlobal(int? ticketId, string? tituloTicket, string? remitente, Guid? ownerId, Guid? asesorId)
    {
        await InvokeAsync(async () =>
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            if (user == null || user.Identity == null || !user.Identity.IsAuthenticated) return;

            // Filtros de privacidad (Tu lógica original)
            var myIdStr = user.FindFirst(ClaimTypes.Sid)?.Value ?? user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            if (Guid.TryParse(myIdStr, out Guid myId))
            {
                if (!string.IsNullOrEmpty(remitente) && remitente == user.Identity.Name) return;
                if (asesorId != null)
                {
                    if (myId != ownerId && myId != asesorId) return;
                }
            }

            var urlActual = NavManager.Uri.ToLower();
            bool estaViendoElTicket = ticketId.HasValue && urlActual.Contains($"/ticket/{ticketId}");
            string mensajeNotificacion = "Actividad en el sistema";

            if (!string.IsNullOrEmpty(tituloTicket) && !string.IsNullOrEmpty(remitente))
                mensajeNotificacion = $"{remitente}: {tituloTicket}";

            await JS.InvokeVoidAsync("verificarYNotificar", mensajeNotificacion, "info", estaViendoElTicket);
            StateHasChanged();
        });
    }

    protected override void OnInitialized()
    {
        NavManager.LocationChanged += AlCambiarUrl;
        ActualizarNombrePagina();
        StateContainer.OnChange += ManejarCambioGlobal;
    }

    private void AlCambiarUrl(object? sender, LocationChangedEventArgs e) { ActualizarNombrePagina(); StateHasChanged(); }

    // Simplificado para el ejemplo, puedes expandir tu lógica de nombres aquí
    private void ActualizarNombrePagina()
    {
        var uri = NavManager.Uri.ToLower();
        if (uri.EndsWith("dashboard")) nombrePagina = "Estadísticas";
        else if (uri.EndsWith("manuales")) nombrePagina = "Base de Conocimiento";
        else if (uri.Contains("nuevo-ticket")) nombrePagina = "Nuevo Ticket";
        else nombrePagina = "";
    }

    private string ObtenerIniciales(string? nombre) => string.IsNullOrEmpty(nombre) ? "U" : nombre.Substring(0, 1).ToUpper();

    public void Dispose() { NavManager.LocationChanged -= AlCambiarUrl; StateContainer.OnChange -= ManejarCambioGlobal; }
}