@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using HelpDeskSystem.Web.Auth
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark border-bottom border-secondary bg-utepsa-dark">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center gap-2" href="">
            <i class="bi bi-shield-check fs-4 text-utepsa-red"></i>
            <span class="fw-bold tracking-tight">HelpDesk UTEPSA</span>
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column pt-3">
        <AuthorizeView>
            <Authorized>
                @* --- SECCIÓN GENERAL --- *@
                <div class="nav-header px-3 mb-2 text-uppercase small text-muted fw-bold">Principal</div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <i class="bi bi-kanban-fill me-3"></i> Tablero
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="dashboard">
                        <i class="bi bi-bar-chart-line-fill me-3"></i> Estadísticas
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="ayuda">
                        <span class="bi bi-question-circle-fill-nav-menu" aria-hidden="true"></span> Ayuda
                    </NavLink>
                </div>

                @* --- SECCIÓN USUARIO --- *@
                @if (EsRol("Usuario"))
                {
                    <div class="nav-item px-3 mt-2">
                        <NavLink class="nav-link btn-crear-ticket" href="nuevo-ticket">
                            <i class="bi bi-plus-circle-fill me-3"></i> Nuevo Ticket
                        </NavLink>
                    </div>
                }

                @* --- SECCIÓN ADMINISTRADOR --- *@
                @if (EsRol("Administrador"))
                {
                    <div class="nav-header px-3 mt-3 mb-2 text-uppercase small text-muted fw-bold">Administración</div>

                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="reportes">
                            <i class="bi bi-file-earmark-bar-graph-fill me-3"></i> Reportes
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/usuarios">
                            <i class="bi bi-people-fill me-3"></i> Usuarios
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/categorias">
                            <i class="bi bi-tags-fill me-3"></i> Categorías
                        </NavLink>
                    </div>
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href="admin/asignar-especialidades">
                            <i class="bi bi-person-gear me-3"></i> Especialidades
                        </NavLink>
                    </div>
                }

                <div class="nav-item px-3 mt-auto mb-3">
                    <hr class="text-secondary opacity-50" />

                    @* USAMOS UN FORMULARIO PARA EL LOGOUT SEGURO *@
                    <form action="/account/logout" method="post">
                        @* Este token es obligatorio en .NET 8 para evitar ataques CSRF *@
                        <AntiforgeryToken />

                        <button type="submit" class="nav-link w-100 text-start text-danger bg-transparent border-0">
                            <i class="bi bi-box-arrow-right me-3"></i> Cerrar Sesión
                        </button>
                    </form>
                </div>
            </Authorized>

            <NotAuthorized>
                <div class="nav-item px-3 mt-3">
                    <NavLink class="nav-link active-login" href="login">
                        <i class="bi bi-box-arrow-in-right me-3"></i> Iniciar Sesión
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    [CascadingParameter] private Task<AuthenticationState>? AuthState { get; set; }
    private ClaimsPrincipal? user;

    protected override async Task OnInitializedAsync()
    {
        if (AuthState != null)
        {
            var state = await AuthState;
            user = state.User;
        }
    }

    // Método auxiliar para limpiar la vista de lógica compleja
    private bool EsRol(string rolRequerido)
    {
        return user?.FindFirst(ClaimTypes.Role)?.Value == rolRequerido;
    }
}