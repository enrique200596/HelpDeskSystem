@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using HelpDeskSystem.Web.Auth
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<div class="d-flex flex-column h-100 bg-utepsa-dark text-white shadow-pro">

    @* --- BRANDING: Alineación con el Header del MainLayout --- *@
    <div class="d-flex align-items-center px-4 py-3 border-bottom border-secondary border-opacity-10" style="height: 64px; flex-shrink: 0;">
        <a class="navbar-brand d-flex align-items-center gap-3 text-white text-decoration-none" href="">
            <div class="bg-white rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 32px; height: 32px;">
                <i class="bi bi-shield-check-fill text-utepsa-red fs-5"></i>
            </div>
            <div class="d-flex flex-column lh-1">
                <span class="fw-bold tracking-tight" style="font-size: 1rem; letter-spacing: -0.5px;">HelpDesk</span>
                <span class="fw-light opacity-50" style="font-size: 0.75rem; letter-spacing: 1px;">UTEPSA</span>
            </div>
        </a>
    </div>

    @* --- NAVEGACIÓN: Alineación de Íconos y Texto --- *@
    <div class="flex-grow-1 overflow-auto py-3 custom-scrollbar">
        <nav class="nav flex-column px-3 gap-1">
            <AuthorizeView>
                <Authorized>

                    <div class="nav-header px-2 mb-2 mt-2 text-uppercase fw-bold text-white-50"
                         style="font-size: 0.65rem; letter-spacing: 1.5px; opacity: 0.6;">
                        Menú Principal
                    </div>

                    <NavLink class="nav-link d-flex align-items-center gap-3 px-3 py-2 rounded-3 text-white opacity-75 hover-effect" href="" Match="NavLinkMatch.All">
                        <i class="bi bi-kanban-fill fs-5"></i> <span class="nav-text">Tablero</span>
                    </NavLink>

                    <NavLink class="nav-link d-flex align-items-center gap-3 px-3 py-2 rounded-3 text-white opacity-75 hover-effect" href="dashboard">
                        <i class="bi bi-bar-chart-line-fill fs-5"></i> <span class="nav-text">Estadísticas</span>
                    </NavLink>

                    <NavLink class="nav-link d-flex align-items-center gap-3 px-3 py-2 rounded-3 text-white opacity-75 hover-effect" href="manuales">
                        <i class="bi bi-journal-richtext fs-5"></i> <span class="nav-text">Conocimiento</span>
                    </NavLink>

                    <NavLink class="nav-link d-flex align-items-center gap-3 px-3 py-2 rounded-3 text-white opacity-75 hover-effect" href="ayuda">
                        <i class="bi bi-question-circle-fill fs-5"></i> <span class="nav-text">Ayuda</span>
                    </NavLink>

                    @if (EsRol("Usuario"))
                    {
                        <div class="mt-4 px-1">
                            <NavLink class="btn btn-utepsa w-100 d-flex align-items-center justify-content-center gap-2 shadow-sm py-2" href="nuevo-ticket">
                                <i class="bi bi-plus-lg fw-bold"></i> <span style="font-size: 0.9rem;">Nuevo Ticket</span>
                            </NavLink>
                        </div>
                    }

                    @if (EsRol("Administrador"))
                    {
                        <div class="nav-header px-2 mb-2 mt-4 text-uppercase fw-bold text-white-50"
                             style="font-size: 0.65rem; letter-spacing: 1.5px; opacity: 0.6;">
                            Configuración
                        </div>

                        <NavLink class="nav-link d-flex align-items-center gap-3 px-3 py-2 rounded-3 text-white opacity-75 hover-effect" href="reportes">
                            <i class="bi bi-file-earmark-bar-graph-fill fs-5"></i> <span class="nav-text">Reportes</span>
                        </NavLink>

                        <NavLink class="nav-link d-flex align-items-center gap-3 px-3 py-2 rounded-3 text-white opacity-75 hover-effect" href="admin/usuarios">
                            <i class="bi bi-people-fill fs-5"></i> <span class="nav-text">Usuarios</span>
                        </NavLink>

                        <NavLink class="nav-link d-flex align-items-center gap-3 px-3 py-2 rounded-3 text-white opacity-75 hover-effect" href="admin/categorias">
                            <i class="bi bi-tags-fill fs-5"></i> <span class="nav-text">Categorías</span>
                        </NavLink>

                        <NavLink class="nav-link d-flex align-items-center gap-3 px-3 py-2 rounded-3 text-white opacity-75 hover-effect" href="admin/asignar-especialidades">
                            <i class="bi bi-person-gear fs-5"></i> <span class="nav-text">Especialidades</span>
                        </NavLink>
                    }
                </Authorized>
            </AuthorizeView>
        </nav>
    </div>

    @* --- FOOTER: SESIÓN --- *@
    <div class="p-4 border-top border-secondary border-opacity-10 bg-black bg-opacity-10">
        <AuthorizeView>
            <Authorized>
                <form action="/account/logout" method="post">
                    <AntiforgeryToken />
                    <button type="submit" class="btn btn-link w-100 d-flex align-items-center gap-3 p-0 text-decoration-none text-danger opacity-75 hover-opacity-100 transition-all">
                        <i class="bi bi-box-arrow-right fs-5"></i> <span class="fw-bold" style="font-size: 0.9rem;">Cerrar Sesión</span>
                    </button>
                </form>
            </Authorized>
            <NotAuthorized>
                <NavLink class="btn btn-utepsa w-100 py-2" href="login">
                    <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión
                </NavLink>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>

<style>
    .nav-text {
        font-size: var(--fs-body);
        font-weight: 500;
        letter-spacing: 0.2px;
    }

    .hover-effect {
        transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid transparent;
    }

        .hover-effect:hover, .nav-link.active {
            background-color: rgba(255, 255, 255, 0.08) !important;
            color: white !important;
            opacity: 1 !important;
            transform: translateX(4px);
        }

    .nav-link.active {
        border-left: 3px solid var(--utepsa-red);
        border-top-left-radius: 0 !important;
        border-bottom-left-radius: 0 !important;
    }

    .transition-all {
        transition: all 0.2s ease;
    }

    .hover-opacity-100:hover {
        opacity: 1 !important;
    }

    /* Scrollbar minimalista para el menú */
    .custom-scrollbar::-webkit-scrollbar {
        width: 4px;
    }

    .custom-scrollbar::-webkit-scrollbar-track {
        background: transparent;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
    }
</style>

@code {
    [CascadingParameter] private Task<AuthenticationState>? AuthState { get; set; }
    private ClaimsPrincipal? user;

    protected override async Task OnInitializedAsync()
    {
        if (AuthState != null)
        {
            var state = await AuthState;
            user = state.User;
        }
    }

    private bool EsRol(string rolRequerido) =>
        user?.Identity?.IsAuthenticated == true && user.IsInRole(rolRequerido);
}